= link_to '戻る', games_musics_path

%h2 機種別部門曲目を編集
= form_tag games_music_path, method: :patch do
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %td 機種
        %td{ colspan: 2 } 課題曲1
        %td{ colspan: 2 } 課題曲2
        %td{ colspan: 2 } 課題曲3
    %tbody
      - Game.all.each do |game|
        %tr
          %td= game.title
          - game.game_musics.each do |music|
            %td= text_field_tag "difficulty[#{music.id}]", music.difficulty, class: 'span1'
            %td= text_field_tag "title[#{music.id}]", music.title, class: 'span2'
  = submit_tag '曲目を更新', class: 'btn btn-primary'
